<h1 class="h6-3 text-center mb-4"><%= "#{@patient.first_name} #{@patient.last_name}" %></h1>

<div class="container d-flex justify-content-around my-4">
  <%= link_to 'Consultation', new_patient_consultation_path(@patient.id), class: "btn-grad font" %>
  <%= link_to 'Editer profil', edit_patient_path(@patient.id) , class: "btn-grad font" %>
   <%= link_to 'Fil de discussion', chatroom_path(@chatroom.id) , class: "btn-grad font" %>
</div>

<div class="row justify-content-center">
  <div class="col-sm-10">
    <div class="card-product">
      <% @consultations.each do |consultation| %>
        <%= link_to consultation_path(consultation.id) do %>
          <div class="card-product-infos">
              <%= image_tag "ordonnance_test.png" %>
              <div class = "text-group">
                <h6><%= consultation.title %></h6>
                <h6><%= consultation.ald %></h6>
                <h6><%= consultation.content %></h6>
              </div>
            <%= image_tag "3-dots-icon.png", id: "dots" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
